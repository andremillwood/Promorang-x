{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps --no-audit --no-fund && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "public": true,
  "routes": [
    { "src": "/api/(.*)", "dest": "https://promorang-api.vercel.app/api/$1" },
    { "src": "/assets/(.*)", "headers": { "Cache-Control": "public, max-age=31536000, immutable" }, "dest": "/assets/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
