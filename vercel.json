{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/apps/web/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/web/index.html"
    }
  ]
}