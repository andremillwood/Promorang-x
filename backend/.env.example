# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# For production, set these in Vercel Environment Variables

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
PORT=3001

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Development example: http://localhost:5173,http://localhost:3000
# Production example: https://promorang.co,https://www.promorang.co,https://promorang-alt.vercel.app
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Legacy CORS variables (kept for backwards compatibility)
FRONTEND_URL=http://localhost:5173
PUBLIC_WEB_ORIGIN=http://localhost:5173

# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# AUTHENTICATION
# ============================================
# JWT Secret for token signing/verification
# IMPORTANT: Use a strong random string in production
JWT_SECRET=your_jwt_secret_key_change_in_production
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Demo logins (set to 'true' to enable demo accounts)
DEMO_LOGINS_ENABLED=true

# ============================================
# INTEGRATIONS
# ============================================
# ManyChat webhook secret for follower sync
# Generate a secure random string for production
MANYCHAT_SECRET=your_manychat_webhook_secret

# NOTE: ManyChat sync currently updates existing users only.
# Ensure the user exists in Supabase (created via app or seed script)
# and that points/follower columns are configured if needed.
MANYCHAT_COOLDOWN_DAYS=30
# Comma-separated lists for bypassing cooldown (case-insensitive)
MANYCHAT_WHITELIST_EMAILS=andremillwood@gmail.com
MANYCHAT_WHITELIST_INSTAGRAMS=andremillwood_
# Defaults used when whitelist env vars are empty (mainly for testing)
MANYCHAT_TEST_EMAIL=andremillwood@gmail.com
MANYCHAT_TEST_INSTAGRAM=andremillwood_

# ============================================
# PAYMENT PROVIDERS
# ============================================
# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_PRICE_BASIC=
STRIPE_PRICE_PRO=
WEBHOOK_SECRET_STRIPE=

# Coinbase Commerce (for crypto payments)
COINBASE_COMMERCE_API_KEY=your_coinbase_api_key
COINBASE_COMMERCE_WEBHOOK_SECRET=your_coinbase_webhook_secret

# Default payment provider
DEFAULT_PAYMENT_PROVIDER=stripe
SHARE_SECRET=replace_with_random_secret

# ============================================
# AWS S3 (for file uploads)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
S3_BUCKET_NAME=your_s3_bucket_name

# ============================================
# EMAIL SERVICE (optional)
# ============================================
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# ============================================
# CACHING & PERFORMANCE
# ============================================
API_CACHE_TTL_MS=15000

# ============================================
# MONITORING & LOGGING
# ============================================
# Set to 'true' to enable verbose logging
DEBUG=false
