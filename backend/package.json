{
  "name": "promorang-api",
  "version": "1.0.0",
  "description": "Promorang API - Vercel Serverless Functions",
  "main": "dist/api/index.js",
  "scripts": {
    "build": "echo 'Building backend (API only)...'",
    "start": "vercel dev",
    "dev": "ts-node-dev --respawn --transpile-only api/index.ts",
    "test": "jest --runInBand",
    "deploy": "vercel --prod",
    "test:cors": "node scripts/test-cors.js",
    "test:cors:prod": "API_URL=https://api.promorang.co FRONTEND_URL=https://www.promorang.co node scripts/test-cors.js",
    "type-check": "tsc --noEmit",
    "logs": "vercel logs --follow",
    "create-demo-users": "ts-node -r dotenv/config scripts/createDemoUsers.ts",
    "seed-products": "node -r dotenv/config scripts/seed-demo-products.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@supabase/supabase-js": "^2.79.0",
    "@vercel/node": "^5.4.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hono": "^4.10.2",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^14.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vercel": "^32.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}