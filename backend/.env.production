NODE_ENV=production
API_BASE_URL=https://api.promorang.co
SUPABASE_URL=https://<SUPABASE_PROJECT_REF>.supabase.co
SUPABASE_SERVICE_KEY=<YOUR_SUPABASE_SERVICE_KEY>
JWT_SECRET=<YOUR_SECURE_RANDOM_STRING>
CORS_ALLOWED_ORIGINS=https://promorang.co,https://www.promorang.co
DISABLE_DEMO_LOGINS=true

# Monitoring
SENTRY_DSN=<YOUR_SENTRY_DSN>
LOG_LEVEL=info

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # per window

# Optional: Database connection pooling
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.<SUPABASE_PROJECT_REF>.supabase.co:5432/postgres
